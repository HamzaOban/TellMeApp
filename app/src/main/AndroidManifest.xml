<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dogukan.tellme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TellMe">
        <activity android:name=".view.ChatLogActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".view.LatestMessagesActivity" />
        </activity>
        <activity
            android:name=".view.LatestMessagesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.RegisterActivity"></activity>
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.NewMessagesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.LatestMessagesActivity" />
        </activity>
    </application>

</manifest>